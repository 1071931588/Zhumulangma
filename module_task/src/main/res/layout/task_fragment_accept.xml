<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="#F7F8FC"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <android.support.constraint.ConstraintLayout style="@style/FormPanel">

            <TextView
                android:id="@+id/textView17"
                style="@style/InputLabel"
                android:text="短信通知"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText"
                style="@style/Input"
                android:editable="false"
                android:text="已送到"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <View
                android:id="@+id/line"
                style="@style/LineStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView17" />
            <TextView
                android:id="@+id/textView18"
                style="@style/InputLabel"
                android:text="APP推送"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <EditText
                android:id="@+id/et_contacts"
                style="@style/Input"
                android:editable="false"
                android:text="已送到"
                app:layout_constraintBottom_toBottomOf="@+id/textView18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/textView18" />
        </android.support.constraint.ConstraintLayout>
<TextView
    android:text="任务指派"
    style="@style/FormTitle"/>
        <android.support.constraint.ConstraintLayout
          style="@style/FormPanel">
            <TextView
                android:id="@+id/textView1"
                style="@style/InputLabel"
                android:text="接收人"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_person_name"
                style="@style/Input"
                android:editable="false"
                android:hint="暂无数据"
                app:layout_constraintBottom_toBottomOf="@+id/textView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="@+id/textView1" />

            <View
                android:id="@+id/line1"
                style="@style/LineStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView1" />


            <TextView
                android:id="@+id/textView2"
                style="@style/InputLabel"
                android:text="手机号码"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1" />

            <EditText
                android:id="@+id/et_person_phone"
                style="@style/Input"
                android:editable="false"
               android:hint="暂无数据"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <View
                android:id="@+id/line2"
                style="@style/LineStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2" />


            <TextView
                android:id="@+id/textView3"
                style="@style/InputLabel"
                android:text="任务内容"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2" />

            <EditText
                android:id="@+id/et_task_content"
                style="@style/Input"
                android:editable="false"
                android:hint="暂无数据"
                android:gravity="top"
                android:minLines="4"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>
        <Button
          android:text="处理反馈"
            style="@style/PrimaryBtn"
            android:visibility="gone"
            />
    </LinearLayout>

</ScrollView>