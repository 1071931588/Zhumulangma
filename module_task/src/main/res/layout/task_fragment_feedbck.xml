<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:background="@color/colorDefualtBg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">
        <android.support.constraint.ConstraintLayout
            style="@style/FormPanel">
            <TextView
                android:id="@+id/textView1"
                style="@style/InputLabel"
                android:text="初步判断"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_report_type"
                style="@style/Input"
                android:text="请选择事件类型"
                android:textColor="@color/colorHint"
                app:layout_constraintBottom_toBottomOf="@+id/textView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="@+id/textView1" />

            <View
                android:id="@+id/line1"
                style="@style/LineStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView1" />

            <TextView
                android:id="@+id/textView3"
                style="@style/InputLabel"
                android:text="处理结果描述"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1" />

            <EditText
                android:id="@+id/et_solve_result"
                style="@style/Input"
                android:hint="请输入处理结果"
                android:gravity="top"
                android:minLines="4"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <View
            android:id="@+id/line2"
            style="@style/LineStyle"
            app:layout_constraintTop_toBottomOf="@id/et_solve_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/textView15"
                style="@style/InputLabel"
                android:text="事件图片"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintStart_toStartOf="parent"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="9dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />


            <TextView
                android:id="@+id/textView16"
                style="@style/InputLabel"
                android:text="事件视频"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_image" />

            <FrameLayout
                android:id="@+id/fl_video"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginTop="13dp"
                android:background="#fff7f8fc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView16">
                <ImageView
                    android:id="@+id/iv_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#45CCCCCC"/>
                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="16dp"
                    android:scaleType="centerCrop"
                    android:layout_height="16dp"
                    android:visibility="gone"
                    android:layout_gravity="top|right"
                    app:srcCompat="@drawable/ic_common_delete" />
            </FrameLayout>
        </android.support.constraint.ConstraintLayout>
        <Button
            android:id="@+id/btn_commit"
            android:text="确认提交"
            style="@style/PrimaryBtn" />
</LinearLayout>
</ScrollView>