<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="11dp"
    android:paddingRight="11dp">
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hot_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_cover">

        <TextView
            android:layout_width="41dp"
            android:layout_height="18dp"
            android:background="@drawable/shap_common_tag"
            android:gravity="center"
            android:text="直播中"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="来看一只小可爱啦~"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:text="一个会唱歌的段子手=。="
        android:textSize="14sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/l"
        app:layout_constraintTop_toBottomOf="@+id/l" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/l"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_home_hot_author" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="逆生的鹿"
            android:textColor="#505050"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="30dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_home_hot_erji" />

        <TextView
            android:id="@+id/tv_playcount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="16335人在线"
            android:textColor="#505050"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>