<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="50dp"
    android:layout_height="50dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/common_avatar"
        app:civ_border_color="#f0f0f0f0"
        app:civ_border_width="2dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
<ImageView
    android:id="@+id/iv_play"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:src="@drawable/ic_common_widget_play_white"
    app:layout_constraintTop_toTopOf="@id/civ_avatar"
    app:layout_constraintBottom_toBottomOf="@id/civ_avatar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>
