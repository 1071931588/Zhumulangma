<?xml version="1.0" encoding="utf-8"?>
<com.gykj.zhumulangma.common.widget.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ratio="1"
    android:layout_marginStart="4dp"
    android:layout_marginBottom="4dp"
    >

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher" />
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="16dp"
        android:scaleType="centerCrop"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_common_delete" />
</com.gykj.zhumulangma.common.widget.RatioRelativeLayout>